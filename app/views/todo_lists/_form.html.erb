<%= form_with(model: todo_list, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name, "Todo List Name", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter the name of your todo list", required: true %>
  </div>

  <div class="d-flex justify-content-between">
    <%= form.submit (todo_list.persisted? ? "Update" : "Create"), class: todo_list.persisted? ? "btn btn-primary" : "btn btn-success" %>
    <%= link_to "Cancel", root_path, class: "btn btn-secondary" unless todo_list.new_record? %>
  </div>
<% end %>
