<%= form_with(model: todo_list) do |form| %>
  <div class="input-group mb-3">
    <%= form.text_field :name, placeholder: (todo_list.persisted? ? "Name" : "New todo list..."), class: "form-control" %>
    <%= form.submit (todo_list.persisted? ? "Update" : "Create"), class: "btn btn-success" %>
  </div>
<% end %>
