<%= form_with(model: [@todo_list, @todo_item]) do |form| %>
    <div class="mb-3">
      <%= form.label :name, "Todo Item Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter a task name", required: true %>
    </div>
    <div class="form-check mb-3">
      <%= form.check_box :done, class: "form-check-input" %>
      <%= form.label :done, "Mark as Done", class: "form-check-label" %>
    </div>
    <%= form.submit "Create", class: "btn btn-primary" %>
  <% end %>
  